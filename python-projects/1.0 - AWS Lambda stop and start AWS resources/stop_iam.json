{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "StopRDSInstances",
      "Effect": "Allow",
      "Action": "rds:StopInstances",
      "Resource": "arn:aws:rds:*:*:instance/*"
    },
    {
      "Sid": "CloudWatchEvents",
      "Effect": "Allow",
      "Action": "events:PutEvents",
      "Resource": "arn:aws:events:*:*:event-bus/default"
    },
    {
      "Sid": "DescribeRDSInstances",
      "Effect": "Allow",
      "Action": "rds:DescribeInstances",
      "Resource": "*"
    }
  ]
}
